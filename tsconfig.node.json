{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",

    "baseUrl": "./",
    "paths": {
      "@infra/*": ["src/infra/*"],
      "@core/*": ["src/core/*"],
      "@assets/*": ["src/assets/*"],
      "@domain/*": ["src/domain/*"]
    }
  },
  "include": ["vite.config.ts", "src", "src/**/*"]
}
